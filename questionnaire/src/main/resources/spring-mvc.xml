<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">



    <aop:aspectj-autoproxy proxy-target-class="true" />
    <!-- 使用注解的包，包括子集 -->
    <context:component-scan base-package="com.sclience.survey.common.base.controller" />
    <context:component-scan base-package="com.sclience.survey.dwsurvey.controller"/>
    <context:component-scan base-package="com.sclience.survey.common.aop" />
    <mvc:annotation-driven conversion-service="convertionFactory">
        <mvc:message-converters>
            <bean id="fastJsonHttpMessageConverter" class="com.alibaba.fastjson.support.spring.FastJsonHttpMessageConverter">
                <property name="supportedMediaTypes">
                    <list>
                        <value>application/json;charset=utf-8</value>
                    </list>
                </property>
            </bean>
        </mvc:message-converters>
    </mvc:annotation-driven>
    <bean id="convertionFactory" class="org.springframework.format.support.FormattingConversionServiceFactoryBean" />
    <!-- 视图解析器 -->
    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/" />
        <property name="suffix" value=".jsp"></property>
    </bean>
    <!-- 配置springMVC处理上传文件的信息 -->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <property name="defaultEncoding" value="UTF-8"/>
        <property name="maxUploadSize" value="1073741824"/> <!-- 最大上传1G -->
    </bean>
    <!--对静态资源的访问-->
    <mvc:resources mapping="/common/**" location="/common/"/>
    <mvc:resources mapping="/css/**" location="/css/"/>
    <mvc:resources mapping="/images/**" location="/images/"/>
    <mvc:resources mapping="/js/**" location="/js/"/>
    <bean id="userRealm" class="com.sclience.survey.common.base.realm.UserRealm"></bean>
    <!-- 配置权限管理器 -->
    <bean id="securityManager" class="org.apache.shiro.web.mgt.DefaultWebSecurityManager">
        <!-- ref对应我们写的realm MyRealm -->
        <property name="realm" ref="userRealm" />
        <!-- 使用下面配置的缓存管理器 -->
        <!--<property name="cacheManager" ref="cacheManager" />-->
    </bean>

</beans>